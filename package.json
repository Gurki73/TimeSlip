{
  "name": "urlaubsplaner",
  "version": "1.0.0",
  "description": "Urlaubs Planer App",
  "author": "Gurki73 <no-reply@example.com>",
  "main": "js/main.js",
  "type": "module",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:win32": "electron-builder --win --ia32",
    "build:win64": "electron-builder --win --x64"
  },
  "devDependencies": {
    "electron": "^33.3.1",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.urlaubsplaner.app",
    "productName": "UrlaubsPlanerApp",
    "icon": "assets/png/Icon.ico",
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Office",
      "icon": "assets/png/Icon.png"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/png/Icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "dependencies": {
    "axios": "^1.7.9"
  }
}
