{
  "name": "MitarbeiterKalender",
  "version": "1.2.1",
  "description": "An- und Abwesentheits Planer App",
  "author": "Gurki73 <no-reply@example.com>",
  "main": "js/main.js",
  "type": "module",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:win32": "electron-builder --win --ia32",
    "build:win64": "electron-builder --win --x64"
  },
  "devDependencies": {
    "electron": "^33.3.1",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.MitarbeiterKalender.app",
    "productName": "MitarbeiterKalenderApp",
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Office",
      "icon": "assets/png/Icon.png"
    },
    "win": {
     "target": [
       {
         "target": "nsis",
         "arch": [
           "x64"
         ]
       },
       {
         "target": "portable",
         "arch": [
           "x64"
         ]
       }
     ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "deleteAppDataOnUninstall": true,
      "installDirectory": "C:\\Programme\\MitarbeiterKalender"
    }
  },
  "dependencies": {
    "axios": "^1.7.9"
  }  
}
